		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.0.0",
		"ejs": "^3.1.6",
		"express": "^4.17.2",
		"express-cache-controller": "^1.1.0",
		"http-status": "^1.6.2",
		"method-override": "^3.0.0",
		"module-alias": "^2.2.3",
		"mongoose": "^7.4.3",
